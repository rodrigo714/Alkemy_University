@model DataPager<TCareer>
@{
    ViewData["Title"] = "Careers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Careers</h1>
<p>
    <a data-toggle="modal" data-target="#modal1" class="btn btn-info text-white">Create Career</a>
</p>
<form asp-area="Career" asp-controller="Careers" asp-action="Index" method="get">
    <div class="row">
        <div class="col-auto">
            <input id="search" name="search" placeholder="Search" class="form-control" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-outline-info">Search</button>
        </div>
        <div class="col-sm-2">
            <input type="number" name="records" class="form-control" value="5" min="1" max="50" step="1" />
        </div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-outline-info">Records</button>
        </div>
    </div>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Input.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Input.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Input.Status)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @{
                        var data = JsonConvert.SerializeObject(item);
                        <a data-toggle="modal" onclick="career.CareerEdit(@data)" data-target="#modal1" class="btn btn-outline-info">Edit</a>
                    }
                </td>
            </tr>
         }
    </tbody>
</table>
<div>
    Results: @Html.Raw(Model.Page_info)
    <br />
    @Html.Raw(Model.Page_nav)
</div>
<div class="modal fade" data-backdrop="static" id="modal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Add Career</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-area="Career" asp-controller="Careers" asp-action="GetCareer" class="formCareer">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Input.Name" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.Name" placeholder="Career Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <label asp-for="Input.Description" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.Description" placeholder="Career Description" class="form-control" />
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>
                        <label asp-for="Input.Status" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.Status" />
                        </div>
                        <span id="message" class="text-danger"></span>
                        <input type="hidden" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="addButton" onclick="career.CareerRegister()">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

