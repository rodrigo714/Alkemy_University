@model DataPager<TCareer>

<div class="modal fade" data-backdrop="static" id="modal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Add Career</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="career.Reset()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-area="Career" asp-controller="Careers" asp-action="GetCareer" class="formCareer">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Input.Name" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.Name" placeholder="Career Name" class="form-control" id="inputName" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <label asp-for="Input.Description" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.Description" placeholder="Career Description" class="form-control" id="inputDesc" />
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>
                        <label asp-for="Input.Status" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Input.Status" id="inputStatus" />
                        </div>
                        <span id="message" class="text-danger"></span>
                        <input type="hidden" required />
                        <input asp-for="Input.CareerID" type="hidden" id="inputID" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" onclick="career.Reset()">Cancel</button>
                    <button type="button" class="btn btn-primary" id="addButton" onclick="career.CareerRegister()">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>