@model DataPager<Alkemy_University.Areas.Course.Models.TCourse>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4"><strong>Alkemy University System</strong></h1>
        <br />
        <div class="imgbox">
            <img src="/img/university.jpg" style=" border-radius: 20px 0 20px 0; max-width: 100%; height: auto;" />
        </div>
        <br />
    </div>
    <div class="form-group">
        <form action="" method="post">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" name="search" id="search" placeholder="Search" class="form-control" />
                </div>
                <div class="col-md-1">
                    <input type="submit" value="Search" id="buttonSearch" class="btn btn-outline-info" />
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        @foreach (var item in Model.List)
        {
            <div class="col-sm-6 col-md-2">
                <div class="card">
                    <div class="card-header">
                        <a asp-route-id="@item.CourseID" asp-action="Details">
                            <img src="~/img/logo_layout.png" height="50" />
                        </a>
                    </div>
                    <div class="card-body">
                        <table class="tableCourses">
                            <tbody>
                                <tr>
                                    <td>
                                        <p>@Html.DisplayFor(modelItem => item.Name)</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <a asp-route-id="@item.CourseID" asp-action="Details" class="btn btn-primary">Suscribe</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    Results: @Html.Raw(Model.Page_info)
    <br />
    @Html.Raw(Model.Page_nav)
</div>

